{
  "name": "uniformcss",
  "version": "1.0.0",
  "description": "Supercharged utility-first CSS framework built for Sass projects.",
  "main": "styles.sass",
  "scripts": {
    "uniform:compile": "sass --load-path=./ --no-source-map styles.scss ../assets/css/styles.css --style compressed",
    "uniform:watch": "sass --load-path=./ --no-source-map --watch styles.scss ../assets/css/styles.css",
    "uniform:cleancss": "cleancss -O2 ../assets/css/styles.css --output ../assets/css/styles.css",
    "uniform": "npm run uniform:compile && npm run uniform:cleancss"
  },
  "keywords": [
    "css",
    "sass",
    "flexbox",
    "framework",
    "responsive",
    "utility first"
  ],
  "author": {
    "name": "Jin Su Park",
    "email": "jinsupark@icloud.com",
    "url": "https://jinsupark.com/"
  },
  "license": "MIT",
  "devDependencies": {
    "clean-css-cli": "^4.3.0",
    "sass": "^1.32.5"
  }
}

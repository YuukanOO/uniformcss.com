---
layout: layouts/base.njk
---

{% include "partials/nav.njk" %}

<section class="bg-silver-100">
  <div class="wrapper">
    <div class="py-64">
      <h1 class="flex align-items-start relative font-5xl font-bold mb-20 tracking-n1">
        {{ title }}
      </h1>
      <p class="font-xl text-black">
        {{ description }}
      </p>
      
    </div>
  </div>
</section>

<section>
  <div class="wrapper">
    <div class="flex">
      <aside class="hidden sm:block w-224 flex-none">
        <div class="t-0 sticky h-100vh overflow-auto py-64">

          <div class="mb-40 last:mb-0 pb-40 border-b-1 last:border-b-0 border-silver-300">
            <div class="font-sm font-bold mb-16">
              Introduction
            </div>
            <nav class="flex flex-col align-items-start">
              {%- for post in collections.introduction -%}
                <a href="{{ post.url }}" class="font-sm transition-100 transform translate-x-0 {% if post.url == page.url %}text-black{% else %}text-gray-100 hover:translate-x-1{% endif %} leading-looser hover:text-black">{{ post.data.title }}</a>
              {%- endfor -%}
            </nav>
          </div>

          <div class="mb-40 last:mb-0 pb-40 border-b-1 last:border-b-0 border-silver-300">
            <div class="font-sm font-bold mb-16">
             Fundamentals
            </div>
            <nav class="flex flex-col align-items-start">
              {%- for post in collections.fundamentals -%}
                <a href="{{ post.url }}" class="font-sm transition-100 transform translate-x-0 {% if post.url == page.url %}text-black{% else %}text-gray-100 hover:translate-x-1{% endif %} leading-looser hover:text-black">{{ post.data.title }}</a>
              {%- endfor -%}
            </nav>
          </div>

          <div class="mb-40 last:mb-0 pb-40 border-b-1 last:border-b-0 border-silver-300">
            <div class="font-sm font-bold mb-16">
              Customization
            </div>
            <nav class="flex flex-col align-items-start">
              {%- for post in collections.customization -%}
                <a href="{{ post.url }}" class="font-sm transition-100 transform translate-x-0 {% if post.url == page.url %}text-black{% else %}text-gray-100 hover:translate-x-1{% endif %} leading-looser hover:text-black">{{ post.data.title }}</a>
              {%- endfor -%}
            </nav>
          </div>

          <div class="mb-40 last:mb-0 pb-40 border-b-1 last:border-b-0 border-silver-300">
            <div class="font-sm font-bold mb-16">
              Theming
            </div>
            <nav class="flex flex-col align-items-start">
              {%- for post in collections.theming -%}
                <a href="{{ post.url }}" class="font-sm transition-100 transform translate-x-0 {% if post.url == page.url %}text-black{% else %}text-gray-100 hover:translate-x-1{% endif %} leading-looser hover:text-black">{{ post.data.title }}</a>
              {%- endfor -%}
            </nav>
          </div>

          <div class="mb-40 last:mb-0 pb-40 border-b-1 last:border-b-0 border-silver-300">
            <div class="font-sm font-bold mb-16">
              Module
            </div>
            <nav class="flex flex-col align-items-start">
              {%- for post in collections.modules -%}
                <a href="{{ post.url }}" class="font-sm transition-100 transform translate-x-0 {% if post.url == page.url %}text-black{% else %}text-gray-100 hover:translate-x-1{% endif %} leading-looser hover:text-black">{{ post.data.title }}</a>
              {%- endfor -%}
            </nav>
          </div>

        </div>
      </aside>

      <div class="flex-auto">
        <div class="block sm:hidden p-6">
          <div class="select">
            <select class="js-select-url">
              <optgroup label="Introduction">
                {%- for post in collections.introduction -%}
                  <option value="{{ post.data.title | slug }}"
                    {% if post.url == page.url %}selected{% endif %}
                  >{{ post.data.title }}</option>
                {%- endfor -%}
              </optgroup>
              <optgroup label="Fundamentals">
                {%- for post in collections.fundamentals -%}
                  <option value="{{ post.data.title | slug }}"
                    {% if post.url == page.url %}selected{% endif %}
                  >{{ post.data.title }}</option>
                {%- endfor -%}
              </optgroup>
              <optgroup label="Customization">
                {%- for post in collections.customization -%}
                  <option value="{{ post.data.title | slug }}"
                    {% if post.url == page.url %}selected{% endif %}
                  >{{ post.data.title }}</option>
                {%- endfor -%}
              </optgroup>
              <optgroup label="Theming">
                {%- for post in collections.theming -%}
                  <option value="{{ post.data.title | slug }}"
                    {% if post.url == page.url %}selected{% endif %}
                  >{{ post.data.title }}</option>
                {%- endfor -%}
              </optgroup>
              <optgroup label="Modules">
                {%- for post in collections.modules -%}
                  <option value="{{ post.data.title | slug }}"
                    {% if post.url == page.url %}selected{% endif %}
                  >{{ post.data.title }}</option>
                {%- endfor -%}
              </optgroup>
            </select>
            <div class="select__angle">

            </div>
          </div>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-12 lg:gap-0">
          <div class="col-9 markdown markdown-glossary px-48 py-64">
            {{ content | safe }}
          </div>
          <div class="relative hidden lg:block lg:col-3">
            <div class="sticky flex justify-content-end pt-48 t-0">
              <div class="radius-md w-100p p-24 bg-silver-100">
                <div class="font-sm font-700 mb-16">
                  On this page
                </div>
                {{ content | toc | safe }}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
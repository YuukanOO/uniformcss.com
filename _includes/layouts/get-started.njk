---
layout: layouts/base.njk
---

{% include "partials/nav.njk" %}

<section>
  <div class="wrapper">
    <div class="flex">
      <aside class="hidden sm.block w-192 flex-none">
        <div class="t-0 sticky h-100vh overflow-auto py-64">
          
          <div class="mb-40 last.mb-0 pb-40 border-b-1 last.border-b-0 border-silver-300">
            <h6 class="font-sm font-bold mb-16">
              Introduction
            </h6>
            <nav class="flex flex-col align-items-start">
              {%- for post in collections.introduction -%}
                <a href="{{ post.url }}" class="font-sm transition-100 transform translate-x-0 {% if post.url == page.url %}text-primary-500 hover.text-primary-500{% else %} text-gray-200 hover.text-black hover.translate-x-6{% endif %} leading-looser">{{ post.data.title }}</a>
              {%- endfor -%}
            </nav>
          </div>

          <div class="mb-40 last.mb-0 pb-40 border-b-1 last.border-b-0 border-silver-300">
            <h6 class="font-sm font-bold mb-16">
             Fundamentals
            </h6>
            <nav class="flex flex-col align-items-start">
              {%- for post in collections.fundamentals -%}
                <a href="{{ post.url }}" class="font-sm transition-100 transform translate-x-0 {% if post.url == page.url %}text-primary-500 hover.text-primary-500{% else %} text-gray-200 hover.text-black hover.translate-x-6{% endif %} leading-looser">{{ post.data.title }}</a>
              {%- endfor -%}
            </nav>
          </div>

          <div class="mb-40 last.mb-0 pb-40 border-b-1 last.border-b-0 border-silver-300">
            <h6 class="font-sm font-bold mb-16">
              Customization
            </h6>
            <nav class="flex flex-col align-items-start">
              {%- for post in collections.customization -%}
                <a href="{{ post.url }}" class="font-sm transition-100 transform translate-x-0 {% if post.url == page.url %}text-primary-500 hover.text-primary-500{% else %} text-gray-200 hover.text-black hover.translate-x-6{% endif %} leading-looser">{{ post.data.title }}</a>
              {%- endfor -%}
            </nav>
          </div>

          <div class="mb-40 last.mb-0 pb-40 border-b-1 last.border-b-0 border-silver-300">
            <h6 class="font-sm font-bold mb-16">
              Theming
            </h6>
            <nav class="flex flex-col align-items-start">
              {%- for post in collections.theming -%}
                <a href="{{ post.url }}" class="font-sm transition-100 transform translate-x-0 {% if post.url == page.url %}text-primary-500 hover.text-primary-500{% else %} text-gray-200 hover.text-black hover.translate-x-6{% endif %} leading-looser">{{ post.data.title }}</a>
              {%- endfor -%}
            </nav>
          </div>

          <div class="mb-40 last.mb-0 pb-40 border-b-1 last.border-b-0 border-silver-300">
            <h6 class="font-sm font-bold mb-16">
              Module
            </h6>
            <nav class="flex flex-col align-items-start">
              {%- for post in collections.modules -%}
                <a href="{{ post.url }}" class="font-sm transition-100 transform translate-x-0 {% if post.url == page.url %}text-primary-500 hover.text-primary-500{% else %} text-gray-200 hover.text-black hover.translate-x-6{% endif %} leading-looser">{{ post.data.title }}</a>
              {%- endfor -%}
            </nav>
          </div>

        </div>
      </aside>

      <div class="flex-auto">
        <div class="block sm.hidden p-6">
          <div class="select">
            <select class="js-select-url">
              <optgroup label="Introduction">
                {%- for post in collections.introduction -%}
                  <option value="{{ post.data.title | slug }}"
                    {% if post.url == page.url %}selected{% endif %}
                  >{{ post.data.title }}</option>
                {%- endfor -%}
              </optgroup>
              <optgroup label="Fundamentals">
                {%- for post in collections.fundamentals -%}
                  <option value="{{ post.data.title | slug }}"
                    {% if post.url == page.url %}selected{% endif %}
                  >{{ post.data.title }}</option>
                {%- endfor -%}
              </optgroup>
              <optgroup label="Customization">
                {%- for post in collections.customization -%}
                  <option value="{{ post.data.title | slug }}"
                    {% if post.url == page.url %}selected{% endif %}
                  >{{ post.data.title }}</option>
                {%- endfor -%}
              </optgroup>
              <optgroup label="Theming">
                {%- for post in collections.theming -%}
                  <option value="{{ post.data.title | slug }}"
                    {% if post.url == page.url %}selected{% endif %}
                  >{{ post.data.title }}</option>
                {%- endfor -%}
              </optgroup>
              <optgroup label="Modules">
                {%- for post in collections.modules -%}
                  <option value="{{ post.data.title | slug }}"
                    {% if post.url == page.url %}selected{% endif %}
                  >{{ post.data.title }}</option>
                {%- endfor -%}
              </optgroup>
            </select>
            <div class="select__angle">

            </div>
          </div>
        </div>
        <div class="grid grid-cols-1 sm.grid-cols-12 lg.gap-0" data-barba="container" data-barba-namespace="get-started">
          <div class="col-9 sm.px-56 py-64">
            <h1 class="flex align-items-start relative font-6xl font-bold mb-20 tracking-tight">
              {{ title | safe }}
            </h1>
            <p class="font-xl text-black pb-64 border-b-1 border-silver-300 mb-64">
              {{ description | safe }}
            </p>
            <div class="markdown">
              {{ content | safe }}
            </div>
          </div>
          <div class="relative hidden lg.block lg.col-3">
            <div class="sticky flex justify-content-end py-64 t-0 h-100vh overflow-auto">
              <div class="w-100p">
                <a class="flex align-items-center radius-md w-100p p-24 py-16 bg-primary-700 hover.bg-primary-800 transition-200 text-white hover.text-white mb-20 last.mb-0" data-barba-prevent>
                  <i class="fab fa-github font-2xl mr-18"></i>
                  <div>
                    <h6 class="font-sm font-bold mb-4 text-white">
                      Found an error?
                    </h6>
                    <p class="font-xs text-white opacity-70">Submit your issue</p>
                  </div>
                </a>
                <div class="pb-64">
                  <div class="radius-md w-100p p-24 bg-silver-100 mb-20 last.mb-0">
                    <h6 class="font-sm font-bold mb-16">
                      On this page
                    </h6>
                    {{ content | toc | safe }}
                  </div>
                </div>

                
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
---
layout: layouts/base.njk
---

{% include "partials/nav-docs.njk" %}

<main class="bg-white color-black">
  <div class="wrapper">
  
    <div class="flex">
      <aside class="hidden md.block w-256 flex-none">
        <div class="top-48 sticky h-100vh overflow-auto px-20 py-64">
          
          <div class="mb-40 last.mb-0 pb-40 border-b-1 last.border-b-0 border-gray border-opacity-40">
            <h6 class="text-md extrabold mb-18 color-cool-gray color-tint-600">
              Introduction
            </h6>
            <nav class="flex flex-col align-items-start">
              {%- for post in collections.introduction -%}
                <a href="{{ post.url }}" class="text-sm semibold transition-200 transform translate-x-0 {% if post.url == page.url %}flex align-items-center w-100p px-10 bg-cool-gray color-white color-tint-400 ml-n10 radius-sm shadow-xs{% else %} color-cool-gray hover.color-shade-400 hover.translate-x-10{% endif %} leading-250">{{ post.data.title }}</a>
              {%- endfor -%}
            </nav>
          </div>

          <div class="mb-40 last.mb-0 pb-40 border-b-1 last.border-b-0 border-gray border-opacity-40">
            <h6 class="text-md extrabold mb-18 color-cool-gray color-tint-600">
             Fundamentals
            </h6>
            <nav class="flex flex-col align-items-start">
              {%- for post in collections.fundamentals -%}
                <a href="{{ post.url }}" class="text-sm semibold transition-200 transform translate-x-0 {% if post.url == page.url %}flex align-items-center w-100p px-10 bg-cool-gray color-white color-tint-400 ml-n10 radius-sm shadow-xs{% else %} color-cool-gray hover.color-shade-400 hover.translate-x-10{% endif %} leading-250">{{ post.data.title }}</a>
              {%- endfor -%}
            </nav>
          </div>

          <div class="mb-40 last.mb-0 pb-40 border-b-1 last.border-b-0 border-gray border-opacity-40">
            <h6 class="text-md extrabold mb-18 color-cool-gray color-tint-600">
              Customization
            </h6>
            <nav class="flex flex-col align-items-start">
              {%- for post in collections.customization -%}
                <a href="{{ post.url }}" class="text-sm semibold transition-200 transform translate-x-0 {% if post.url == page.url %}flex align-items-center w-100p px-10 bg-cool-gray color-white color-tint-400 ml-n10 radius-sm shadow-xs{% else %} color-cool-gray hover.color-shade-400 hover.translate-x-10{% endif %} leading-250">{{ post.data.title }}</a>
              {%- endfor -%}
            </nav>
          </div>

          <div class="mb-40 last.mb-0 pb-40 border-b-1 last.border-b-0 border-gray border-opacity-40">
            <h6 class="text-md extrabold mb-18 color-cool-gray color-tint-600">
              Theming
            </h6>
            <nav class="flex flex-col align-items-start">
              {%- for post in collections.theming -%}
                <a href="{{ post.url }}" class="text-sm semibold transition-200 transform translate-x-0 {% if post.url == page.url %}flex align-items-center w-100p px-10 bg-cool-gray color-white color-tint-400 ml-n10 radius-sm shadow-xs{% else %} color-cool-gray hover.color-shade-400 hover.translate-x-10{% endif %} leading-250">{{ post.data.title }}</a>
              {%- endfor -%}
            </nav>
          </div>

          <div class="mb-40 last.mb-0 pb-40 border-b-1 last.border-b-0 border-gray border-opacity-40">
            <h6 class="text-md extrabold mb-18 color-cool-gray color-tint-600">
              Special Utilities
            </h6>
            <nav class="flex flex-col align-items-start">
              {%- for post in collections.specialUtilities -%}
                <a href="{{ post.url }}" class="text-sm semibold transition-200 transform translate-x-0 {% if post.url == page.url %}flex align-items-center w-100p px-10 bg-cool-gray color-white color-tint-400 ml-n10 radius-sm shadow-xs{% else %} color-cool-gray hover.color-shade-400 hover.translate-x-10{% endif %} leading-250">{{ post.data.title }}</a>
              {%- endfor -%}
            </nav>
          </div>

        </div>
      </aside>

      <div class="docsearch-content overflow-auto px-20 md.pr-20 md.px-56 lg.pr-56 py-64 flex-1">
        <h1 class="flex align-items-start relative text-5xl lg.text-7xl xl.text-7xl extrabold color-black tracking-tight mb-16">
          <div class="relative">
            <span class="relative z-2 bg-text bg-linear color-transparent" style="--gradient: to right, #ff68b5, #ffbe76;">{{ title | safe }}</span>
          </div>
        </h1>
        <p class="text-lg sm.text-xl regular color-cool-gray color-shade-200">
          {{ description | safe }}
        </p>
        <div class="markdown color-black">
          {{ content | safe }}
        </div>
      </div>
      <div class="relative hidden lg.block w-256 flex-none">
        <div class="sticky flex justify-content-end py-64 top-48 h-100vh overflow-auto">
          <div class="w-100p">
            
            <div class="pb-64">
              <h6 class="text-md extrabold mb-18 color-cool-gray color-tint-600">
                On this page
              </h6>
              {{ content | toc | safe }}
            </div>
            
          </div>
        </div>
      </div>
    </div>
  </div>
</main>